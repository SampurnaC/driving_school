<div class="container mt-5">
  <h2 class="mb-4">Edit Enquiry</h2>

  <div class="card shadow-sm">
    <div class="card-body">
      <%= form_with model: [:admin, enquiry], local: true do |f| %>

        <div class="mb-3">
          <%= f.label :name, class: "form-label" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :email, class: "form-label" %>
          <%= f.email_field :email, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :phone, class: "form-label" %>
          <%= f.text_field :phone, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :message, class: "form-label" %>
          <%= f.text_area :message, rows: 4, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :status, class: "form-label" %>
          <%= f.select :status,
                Enquiry.statuses.keys.map { |key| [key.humanize, key] },
                {},
                class: "form-select" %>
        </div>

        <div class="d-flex gap-2">
          <%= f.submit "Update Enquiry", class: "btn btn-danger" %>
          <%= link_to "Cancel",
                admin_enquiries_path,
                class: "btn btn-secondary" %>
        </div>

      <% end %>
    </div>
  </div>
</div>
