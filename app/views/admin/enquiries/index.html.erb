<h1 class="mb-4">All Enquiries</h1>

<table class="table table-striped table-bordered">
  <thead class="table-dark">
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Message</th>
      <th>Status</th>
      <th>Received At</th>
    </tr>
  </thead>
  <tbody>
    <% @enquiries.each do |enquiry| %>
      <tr>
        <td><%= enquiry.id %></td>
        <td><%= enquiry.name %></td>
        <td><%= enquiry.email %></td>
        <td><%= enquiry.phone %></td>
        <td><%= enquiry.message %></td>
        <td><%= enquiry.status || "pending" %></td>
        <td><%= enquiry.created_at.strftime("%d %b %Y %H:%M") %></td>
      </tr>
    <% end %>
  </tbody>
</table>
