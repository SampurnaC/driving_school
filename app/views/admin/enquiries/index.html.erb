<h1 class="mb-4">All Enquiries</h1>

<table class="table table-striped table-bordered">
  <thead class="table-dark">
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Message</th>
      <th>Status</th>
      <th>Received At</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @enquiries.each do |enquiry| %>
      <tr>
        <td><%= enquiry.id %></td>
        <td><%= enquiry.email %></td>
        <td><%= enquiry.name %></td>
        <td><%= enquiry.phone %></td>
        <td><%= enquiry.message %></td>
        <td><%= enquiry.status.titleize %></td>
        <td><%= enquiry.created_at.strftime("%d %b %Y %H:%M") %></td>
        <td>
          <%= button_to "Delete", admin_enquiry_path(enquiry),
                      method: :delete,
                      data: { turbo_confirm: "Are you sure you want to delete this enquiry?" },
                      class: "btn btn-sm btn-danger" %>
        </td>
        <td>
          <%= link_to "Edit", edit_admin_enquiry_path(enquiry), class: "btn btn-sm btn-primary" %>              
        </td
      </tr>
    <% end %>
  </tbody>
</table>
